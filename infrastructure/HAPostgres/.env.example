# ============================================================================
# PostgreSQL HA Cluster Environment Variables
# ============================================================================
# Copy this file to .env and update with your secure passwords
# NEVER commit .env to version control!

# ----------------------------------------------------------------------------
# PostgreSQL Superuser Credentials
# ----------------------------------------------------------------------------
POSTGRES_SUPERUSER_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ----------------------------------------------------------------------------
# PostgreSQL Replication User
# ----------------------------------------------------------------------------
POSTGRES_REPLICATION_PASSWORD=CHANGE_ME_REPLICATION_PASSWORD

# ----------------------------------------------------------------------------
# Patroni Admin Password (for REST API)
# ----------------------------------------------------------------------------
PATRONI_ADMIN_PASSWORD=CHANGE_ME_PATRONI_ADMIN_PASSWORD

# ----------------------------------------------------------------------------
# HAProxy Stats Page Password
# ----------------------------------------------------------------------------
HAPROXY_STATS_PASSWORD=CHANGE_ME_HAPROXY_STATS_PASSWORD

# ============================================================================
# Password Generation Examples (use these commands to generate secure passwords)
# ============================================================================
# openssl rand -base64 32
# pwgen -s 32 1
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
