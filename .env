# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://saasodoo:saasodoo123@localhost:5432/saasodoo
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saasodoo
DB_USER=saasodoo
DB_PASSWORD=saasodoo123

# Supabase Authentication
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Kubernetes Configuration
KUBECONFIG_PATH=/path/to/kubeconfig
K8S_NAMESPACE=saasodoo-system
K8S_TENANT_NAMESPACE_PREFIX=tenant-

# Database Strategy Configuration
DEFAULT_DB_STRATEGY=shared
SHARED_DB_MAX_TENANTS=100
DEDICATED_DB_THRESHOLD=1000

# Odoo Configuration
ODOO_IMAGE=odoo:17.0
ODOO_ADMIN_PASSWORD=admin
ODOO_DB_FILTER=^%d$

# Ingress Configuration
DOMAIN_SUFFIX=.saasodoo.com
WILDCARD_CERT_SECRET=wildcard-tls
TRAEFIK_NAMESPACE=traefik-system

# Monitoring Configuration
PROMETHEUS_NAMESPACE=monitoring
GRAFANA_ADMIN_PASSWORD=admin
ALERTMANAGER_WEBHOOK_URL=http://localhost:5000/api/alerts

# Kill Bill Configuration
KILLBILL_URL=http://localhost:8081
KILLBILL_API_KEY=your-killbill-api-key
KILLBILL_API_SECRET=your-killbill-api-secret
KILLBILL_USERNAME=admin
KILLBILL_PASSWORD=password

# Storage Configuration
BACKUP_STORAGE_TYPE=s3
S3_BUCKET=saasodoo-backups
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# MinIO Configuration (for local development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=False

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/saasodoo/app.log

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
ENABLE_TENANT_MIGRATION=True
ENABLE_AUTO_SCALING=True
ENABLE_BACKUP_AUTOMATION=True
ENABLE_MONITORING=True

# Development Configuration
DEV_MODE=True
DEBUG_TOOLBAR=False
TESTING=False

# Production Configuration
WORKERS=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# SSL/TLS Configuration
SSL_ENABLED=True
SSL_CERT_PATH=/etc/ssl/certs/saasodoo.crt
SSL_KEY_PATH=/etc/ssl/private/saasodoo.key

# Notification Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@saasodoo.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# Docker Configuration (for local development)
COMPOSE_PROJECT_NAME=saasodoo

# Frontend Configuration
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:5000