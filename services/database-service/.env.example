# Database Service Environment Variables
# Copy this file to .env and update with your actual values

# Platform Database (PostgreSQL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=instance
DB_SERVICE_USER=database_service
DB_SERVICE_PASSWORD=database_service_secure_pass_change_me

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# RabbitMQ (Celery)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=saasodoo
RABBITMQ_PASSWORD=saasodoo123
RABBITMQ_VHOST=saasodoo

# Docker
DOCKER_HOST=unix:///var/run/docker.sock

# CephFS
CEPHFS_MOUNT_PATH=/mnt/cephfs

# Pool Configuration
DB_POOL_MAX_INSTANCES=50
DB_POOL_CPU_LIMIT=2
DB_POOL_MEMORY_LIMIT=4G
DB_POOL_POSTGRES_VERSION=18
DB_POOL_POSTGRES_IMAGE=postgres:18-alpine
DB_POOL_NETWORK=saasodoo-network

# PostgreSQL Admin Credentials (for creating databases on pools)
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=

# Application
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# API
API_TITLE=Database Service
API_VERSION=1.0.0
