      -H "Content-Type: application/json" \
      -d '{
        "name": "perf-test-'$i'",
        "tenant_id": "123e4567-e89b-12d3-a456-426614174000",
        "odoo_version": "17.0",
        "instance_type": "development",
        "admin_email": "perf'$i'@test.com",
